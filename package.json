{
  "name": "churnlens",
  "displayName": "ChurnLens",
  "description": "Visualizes code churn in the file explorer.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "churnlens-explorer",
          "title": "ChurnLens",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "churnlens-explorer": [
        {
          "id": "churnlens.sidebar",
          "name": "Churn Explorer",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "churnlens.openConfig",
        "title": "ChurnLens: Open Configuration"
      },
      {
        "command": "churnlens.refresh",
        "title": "ChurnLens: Refresh Stats"
      }
    ],
    "colors": [
      {
        "id": "churnlens.level1",
        "description": "Churn Level 1 (Low)",
        "defaults": {
          "dark": "#90EE90",
          "light": "#90EE90",
          "highContrast": "#90EE90"
        }
      },
      {
        "id": "churnlens.level2",
        "description": "Churn Level 2",
        "defaults": {
          "dark": "#ADFF2F",
          "light": "#ADFF2F",
          "highContrast": "#ADFF2F"
        }
      },
      {
        "id": "churnlens.level3",
        "description": "Churn Level 3",
        "defaults": {
          "dark": "#FFD700",
          "light": "#FFD700",
          "highContrast": "#FFD700"
        }
      },
      {
        "id": "churnlens.level4",
        "description": "Churn Level 4",
        "defaults": {
          "dark": "#FFA500",
          "light": "#FFA500",
          "highContrast": "#FFA500"
        }
      },
      {
        "id": "churnlens.level5",
        "description": "Churn Level 5",
        "defaults": {
          "dark": "#FF4500",
          "light": "#FF4500",
          "highContrast": "#FF4500"
        }
      },
      {
        "id": "churnlens.level6",
        "description": "Churn Level 6 (High)",
        "defaults": {
          "dark": "#FF0000",
          "light": "#FF0000",
          "highContrast": "#FF0000"
        }
      }
    ],
    "configuration": {
      "title": "ChurnLens",
      "properties": {
        "churnlens.periodDays": {
          "type": "number",
          "default": 30,
          "description": "Number of days to look back in git history."
        },
        "churnlens.badgeTheme": {
          "type": "string",
          "enum": [
            "circles",
            "squares"
          ],
          "default": "circles",
          "description": "Theme for the churn level badges."
        },
        "churnlens.hideRoot": {
          "type": "boolean",
          "default": true,
          "description": "Hide the root project folder from the Churn Explorer."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "tsc -p ./",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "simple-git": "^3.19.1"
  }
}
